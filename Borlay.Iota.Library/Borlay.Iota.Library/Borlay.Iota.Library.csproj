<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.1</TargetFramework>
    <Authors>Paulius Kanoverskis</Authors>
    <Company>Paulius Kanoverskis</Company>
    <Description>IOTA wallet library for .NET Standard framework. Compatible with .net 4.5 and .net core 1.0</Description>
    <RepositoryUrl>https://github.com/Borlay/Borlay.Iota.Library</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>borlay iota wallet</PackageTags>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/Borlay/Borlay.Iota.Library</PackageProjectUrl>
    <Version>1.0.6</Version>
    <PackageReleaseNotes>Changed to .NET Standard 1.1 to suport .net45
Async address generation fixes to not block UI</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netstandard1.4\Borlay.Iota.Library.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
  </ItemGroup>

</Project>